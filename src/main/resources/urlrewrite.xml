<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE urlrewrite
        PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN"
        "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">

<urlrewrite>
    <rule>
        <name>Domain Name Check</name>
        <condition name="host" operator="notequal">(www.andrewsmith.io|localhost)</condition>
        <from>(.*)</from>
        <to type="redirect">http://www.andrewsmith.io/$1</to>
    </rule>

    <!--If no file extension is specified, add .html, unless accessing the resume file-->
    <rule>
        <condition type="request-uri" operator="notequal">(\/resume)</condition>
        <from>^((\/?[\w\/\-_])*\b)\/?$</from>
        <to type="redirect" last="true" qsappend="true">$1.html</to>
    </rule>
</urlrewrite>
