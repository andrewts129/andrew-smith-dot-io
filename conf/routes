# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET      /                           controllers.PageController.index
GET      /projects                   controllers.PageController.projects
GET      /one-hit-wonders            controllers.PageController.oneHitWonders
GET      /whispering-pablo           controllers.PageController.whisperingPablo
GET      /resume                     controllers.PageController.resume
GET      /AndrewSmithResume          controllers.FileController.getResume(b: Option[String])

# Map static resources from the /public folder to the /assets URL path
GET      /assets/*file                controllers.Assets.at(path="/public", file)

#GET     /favicon.ico                controllers.Assets.at(path="/public", file="images/favicon.png")

