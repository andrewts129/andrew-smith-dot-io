# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET      /                           controllers.PageController.index
GET      /links                      controllers.PageController.links
GET      /one-hit-wonders            controllers.PageController.oneHitWonders
GET      /whispering-pablo           controllers.PageController.whisperingPablo
GET      /columbus-buildings         controllers.PageController.columbusBuildings
GET      /bogosort                   controllers.PageController.bogosort
GET      /bogosort/data              controllers.BogoController.data
GET      /resume                     controllers.PageController.resume
GET      /AndrewSmithResume          controllers.FileController.resume(b: Option[String])
GET      /home                       controllers.PageController.homepage


+nocsrf
POST     /messages/add               controllers.MessageQueueController.add
GET      /messages/add               controllers.PageController.messages
POST     /messages/pop               controllers.MessageQueueController.pop

GET      /robots.txt                 controllers.Assets.at(path="/public", file="robots.txt")

# Map static resources from the /public folder to the /assets URL path
GET      /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
