# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET      /                           controllers.PageController.index
GET      /projects                   controllers.PageController.projects
GET      /one-hit-wonders            controllers.PageController.oneHitWonders
GET      /whispering-pablo           controllers.PageController.whisperingPablo
GET      /resume                     controllers.PageController.resume
GET      /AndrewSmithResume          controllers.FileController.resume(b: Option[String])

GET      /columbus-buildings                            controllers.PageController.columbusBuildings
GET      /columbus-buildings/style/:name/style.json     controllers.TileController.getStyle(name: String)
GET      /columbus-buildings/tile/:source/:z/:y/:x.pbf  controllers.TileController.getTile(source: String, z: String, y: String, x: String)

# Map static resources from the /public folder to the /assets URL path
GET      /assets/*file                controllers.Assets.versioned(path="/public", file: Asset)
