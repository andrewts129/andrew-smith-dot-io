# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET      /                           controllers.Assets.at(path="/public", file="html/index.html")
GET      /projects                   controllers.Assets.at(path="/public", file="html/projects.html")
GET      /one-hit-wonders            controllers.Assets.at(path="/public", file="html/one-hit-wonders.html")
GET      /whispering-pablo           controllers.Assets.at(path="/public", file="html/whispering-pablo.html")

GET      /resume                     controllers.FileController.getResume()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /favicon.ico                controllers.Assets.at(path="/public", file="images/favicon.png")

